---
import { url, asset } from '../utils/paths'

interface Props {
  image: string
  title: string
  subtitle?: string
  ctaLabel?: string
  ctaHref?: string
}

const { image, title, subtitle, ctaLabel, ctaHref } = Astro.props
---

<section class="relative h-[70vh] min-h-[400px] flex items-center justify-center overflow-hidden">
  <div class="absolute inset-0">
    <img src={asset(image)} alt="" class="w-full h-full object-cover" loading="eager" />
    <div class="absolute inset-0 bg-black/40"></div>
  </div>
  <div class="relative z-10 text-center px-4 max-w-3xl mx-auto">
    <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl text-white mb-4 drop-shadow-lg">
      {title}
    </h1>
    {subtitle && (
      <p class="text-lg md:text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        {subtitle}
      </p>
    )}
    {ctaLabel && ctaHref && (
      <a
        href={url(ctaHref)}
        class="inline-block bg-accent hover:bg-accent-dark text-white font-heading uppercase tracking-widest text-sm px-8 py-4 transition-colors"
      >
        {ctaLabel}
      </a>
    )}
  </div>
</section>
