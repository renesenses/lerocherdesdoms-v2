---
import { url, asset } from '../utils/paths'

interface Props {
  title: string
  image: string
  href: string
  excerpt?: string
}

const { title, image, href, excerpt } = Astro.props
---

<a href={url(href)} class="group block">
  <div class="overflow-hidden mb-4">
    <img
      src={asset(image)}
      alt={title}
      class="w-full aspect-[3/4] object-cover transition-transform duration-500 group-hover:scale-105"
      loading="lazy"
    />
  </div>
  <h3 class="font-heading text-xl text-wheat group-hover:text-accent transition-colors mb-2">
    {title}
  </h3>
  {excerpt && (
    <p class="text-sm text-white/70 line-clamp-3">{excerpt}</p>
  )}
</a>
